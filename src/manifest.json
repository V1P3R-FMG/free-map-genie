{
    "manifest_version": 3,
    "icons": {
        "128": "./assets/icons/128.png"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "FMG Control Panel"
    },
    "permissions": ["declarativeNetRequest", "storage", "offscreen"],
    "host_permissions": ["https://mapgenie.io/", "https://cdn.mapgenie.io/"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["extension.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["https://mapgenie.io/*"],
            "js": ["storage/main.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["content.js", "content/*", "chunks/*", "assets/**/*", "css/**/*"]
        }
    ]
}
