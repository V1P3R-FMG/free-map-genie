{
    "compilerOptions": {
        "module": "ES2020",
        "lib": ["DOM", "ES2020.Promise"],
        "target": "ES2015",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "noImplicitAny": true,
        "strict": true,
        "paths": {
            "@constants": ["constants.ts"],
            "@utils/*": ["utils/*"],
            "@shared/*": ["shared/*"],
            "@fmg/*": ["fmg/*"],
            "@content/*": ["contexts/content/*"],
            "@extension/*": ["contexts/extension/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
