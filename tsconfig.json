{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["DOM", "ES2020.Promise"],
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@src/*": ["./*"],
            "@constants": ["constants.ts"],
            "@utils/*": ["utils/*"],
            "@shared/*": ["shared/*"],
            "@fmg/*": ["fmg/*"],
            "@content/*": ["contexts/content/*"],
            "@extension/*": ["contexts/extension/*"],
            "@iframe/*": ["contexts/iframe/*"],
            "@background/*": ["contexts/background/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__"]
}
