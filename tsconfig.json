{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ES2020.Promise"],
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@constants": ["constants.ts"],
            "@utils/*": ["utils/*"],
            "@shared/*": ["shared/*"],
            "@content/*": ["contexts/content/*"],
            "@extension/*": ["contexts/extension/*"],
            "@storage/*": ["contexts/storage/*"],
            "@background/*": ["contexts/background/*"],
            "@popup/*": ["popup/*"],
            "@assets/*": ["assets/*"],
            "@ui/*": ["ui/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__", "**/__utils__", "**/__mocks__"]
}
